}
<h1>Confirmar eliminación</h1>
<h3>¿Está seguro que desea eliminiar este elemento?</h3>



<div>
    <h4>Usuarios</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Models => Models.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(Models => Models.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Models => Models.LastName)
